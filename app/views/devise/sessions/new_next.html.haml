%body
  %header.single-header
    %h1
      %img{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2482339763"}/
  %main.single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        %a{:href => "#"} 新規会員登録
      .login-form-inner
        %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
          %i.fab.fa-facebook-f
          Facebookでログイン
        %button#google-login.btn-default.btn-sns.btn-sns-google
          %i.fab.fa-facebook-f
          Googleでログイン
      = form_for(resource, as: resource_name,:html => {:class => "login-form-inner"}, url: session_path(resource_name)) do |f|
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .field
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
        .actions
          = f.submit "ログイン", :class=>"login-submit btn-default btn-red"
      = render "devise/shared/links"
