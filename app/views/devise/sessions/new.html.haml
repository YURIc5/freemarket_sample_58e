%body
  .single-container
    %main.single-main
      .login-panel
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          = link_to '新規会員登録',users_signup_path
        .login-form-inner
          = link_to user_facebook_omniauth_authorize_path,method: :post, id:'#facebook-login', class: 'btn-default btn-sns btn-sns-facebook' do
            =fa_icon 'facebook-square',class:'icon'
            Facebookでログイン
          = link_to user_google_oauth2_omniauth_authorize_path,id:'#google-login',method: :post, class: 'btn-default btn-sns btn-sns-google' do
            Googleでログイン
        = form_for(resource, as: resource_name, html: {class: "login-form-inner"}, url: session_path(resource_name)) do |f|
          .field
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          .field
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
          .actions
            = f.submit "ログイン", class: "login-submit btn-default btn-red"
        = render "devise/shared/links"
